<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_root"
    android:background="@color/_ffffff_202124"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.aliya.uimode.sample.view.TopBar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />
    <TextView
        android:id="@+id/tv_simple1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_goneMarginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:drawableTop="@mipmap/ic_home"
        style="@style/backStyleRed100"
        android:text="自定义"
        android:textColor="@color/_484848_7a7b7d"
        app:drawableTint="@color/_484848_7a7b7d" />

    <TextView
        android:id="@+id/tv_change_local_mode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple1"
        app:layout_goneMarginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="未设置"
        android:textColor="@color/_484848_7a7b7d"
        />

</androidx.constraintlayout.widget.ConstraintLayout>