<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--水波纹颜色-->
        <item name="colorControlHighlight">#33ffffff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeScarlet" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryScarlet</item>
        <item name="colorPrimaryDark">@color/colorPrimaryScarletDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <!--水波纹颜色-->
        <item name="colorControlHighlight">#443F51B5</item>
    </style>

    <style name="ViewTheme">
        <!--水波纹颜色-->
        <item name="colorControlHighlight">@color/md_yellow_800_color_code</item>
    </style>

    <style name="textStyle1">
        <!--水波纹颜色-->
        <item name="android:textColor">#3f51b5</item>
    </style>




</resources>
